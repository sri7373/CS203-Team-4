# =================================
# TARIFF CALCULATOR - ENVIRONMENT CONFIGURATION
# =================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =================================
# DATABASE CONFIGURATION (AWS RDS or local)
# =================================
# For AWS RDS:
# DB_URL=jdbc:postgresql://your-rds-endpoint:5432/postgres
# DB_USERNAME=postgres
# DB_PASSWORD=your-strong-password
#
# For local Postgres (docker-compose dev):
# DB_URL=jdbc:postgresql://db:5432/tariff
# DB_USERNAME=tariff
# DB_PASSWORD=tariff
DB_URL=jdbc:postgresql://localhost:5432/postgres
DB_USERNAME=postgres
DB_PASSWORD=postgres

# PostgreSQL Docker Configuration
POSTGRES_DB=tariff
POSTGRES_USER=tariff
POSTGRES_PASSWORD=tariff

# =================================
# JWT SECURITY CONFIGURATION
# =================================
# Generate a 256-bit Base64 secret: 
# openssl rand -base64 32
JWT_SECRET=fvbMVJWfii+dPc5Ih2W6s9IC7C+fIdZgC2B/VVnEjBM=
JWT_EXPIRATION_MS=86400000

# =================================
# API CONFIGURATION
# =================================
API_URL=http://localhost:8080
GEMINI_API_KEY=your-gemini-api-key-here
NEWSDATA_API_KEY=your-newsdata-api-key-here

# =================================
# FRONTEND CONFIGURATION
# =================================
VITE_API_URL=http://localhost:8081
VITE_APP_NAME=TARIFFSHERIFF
VITE_APP_VERSION=1.0.0

# =================================
# PGADMIN CONFIGURATION
# =================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# =================================
# PRODUCTION OVERRIDES
# =================================
# Uncomment and modify for production deployment
# POSTGRES_PASSWORD=your-secure-production-password
# JWT_SECRET=your-production-jwt-secret
# VITE_API_URL=https://your-domain.com/api
